<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_background"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/profile_rl"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="45dp"
                android:id="@+id/img_profile"
                android:src="@mipmap/ic_profile"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naiyar Raza"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="21sp"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profile_rl"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">
        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_email"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_email"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="Wiliam@gmail.com"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/ic_phone"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_phone"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="+266 225 225"/>
        </LinearLayout>
<View
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_height="3dp"></View>
        <TextView
            android:layout_width="match_parent"
            android:text="Contact us(+9876543210)"
            android:textColor="@color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/logout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="150dp"
        android:padding="10dp"
        android:layout_marginBottom="100dp"
        android:background="#E23434"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:text="Logout"/>

</RelativeLayout>