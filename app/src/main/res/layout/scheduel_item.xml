<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="10"
    android:background="@drawable/border_set"
    android:padding="10dp"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="0dp"
    android:layout_weight="5"
    android:padding="10dp"
    android:id="@+id/sch_duration"
    android:text="Sun-Mon"
    android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"

            android:text="On"
            android:id="@+id/sch_status"
            android:padding="10dp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:text="Val"
            android:id="@+id/sch_bright"
            android:padding="10dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"

            android:text="10:00 am"
            android:id="@+id/sch_time"
            android:padding="10dp"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:text="0"
            android:id="@+id/sch_brght_val"
            android:padding="10dp"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:background="@null"
        android:id="@+id/delete_sch"
        android:src="@mipmap/delete_icon"

        android:layout_height="match_parent"></ImageButton>
</LinearLayout>