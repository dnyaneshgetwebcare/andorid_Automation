<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iplug.automation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_iplug_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_iplug_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.iplug.automation.SignIn"></activity>
        <activity
            android:name="com.iplug.automation.LauncherActivity"
            android:label="@string/title_activity_launcher" />
        <activity android:name="com.iplug.automation.UserDataActivity" />
        <activity
            android:name="com.iplug.automation.ProfileActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name="com.iplug.automation.MainActivity" />
        <activity android:name="com.iplug.automation.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>